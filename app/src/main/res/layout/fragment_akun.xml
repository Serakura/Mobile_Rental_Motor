<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gold">


    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="412dp"
        android:layout_height="49dp"
        android:text="Akun"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:background="@color/dark"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/text_notifications">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="172dp"
            android:layout_height="132dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/usr" />

        <TextView
            android:id="@+id/akun_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:background="@drawable/border_textview"
            android:drawableLeft="@drawable/ic_user_focused"
            android:drawablePadding="10dp"
            android:text="Nama"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/akun_ktp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:background="@drawable/border_textview"
            android:drawableLeft="@drawable/ic_id_card_focused"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:text="Nomor KTP"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/akun_telp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:background="@drawable/border_textview"
            android:drawableLeft="@drawable/ic_phone_focused"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:text="Nomor Telepon"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/akun_jenkel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:background="@drawable/border_textview"
            android:drawableLeft="@drawable/ic_genders"
            android:drawablePadding="10dp"
            android:textAlignment="textStart"
            android:text="Jenis Kelamin"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/akun_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_textview"
            android:drawableLeft="@drawable/ic_home_focused"
            android:drawablePadding="10dp"
            android:padding="8dp"
            android:text="Alamat"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/button_radius"
        android:backgroundTint="@color/dark"
        android:text="Log out"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginTop="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>